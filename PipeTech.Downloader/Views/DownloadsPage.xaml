<Page
    x:Class="PipeTech.Downloader.Views.DownloadsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:models="using:PipeTech.Downloader.Models"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            x:Uid="Downloads_Title"
            Style="{StaticResource PageTitleStyle}" />
        <controls:DataGrid
            Grid.Row="1"          
            IsReadOnly="True"            
            IsHitTestVisible="False"            
            AutoGenerateColumns="False"
            RowDetailsVisibilityMode="VisibleWhenSelected"
            GridLinesVisibility="Horizontal"
            ItemsSource="{x:Bind ViewModel.Source, Mode=OneWay}">
            <controls:DataGrid.Resources>
                <SolidColorBrush x:Key="DataGridColumnHeaderBackgroundColor" Color="Transparent" />
            </controls:DataGrid.Resources>
            <controls:DataGrid.Columns>
                <controls:DataGridTemplateColumn Header="" >
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="models:DownloadInspection">
                            <controls:Expander Header="" IsExpanded="{x:Bind Expanded, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>
                <controls:DataGridTextColumn Binding="{Binding Project, Mode=OneWay}" Header="Project"/>
                <controls:DataGridTextColumn Binding="{Binding DownloadPath, Mode=OneWay}" Header="Download Path" />
                <controls:DataGridTextColumn Binding="{Binding Size, Mode=OneWay}" Header="Size" />
                <controls:DataGridTextColumn Binding="{Binding Progress, Mode=OneWay}" Header="Progress" />
                <controls:DataGridTextColumn Header="Actions" />
                <!--<controls:DataGridTemplateColumn Header="Symbol">
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <FontIcon
                                HorizontalAlignment="Left"
                                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                Glyph="{Binding Symbol}"
                                AutomationProperties.Name="{Binding SymbolName}" />
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>-->
            </controls:DataGrid.Columns>
            <controls:DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <Grid>
                        <controls:DataGrid>
                            <controls:DataGrid.Resources>
                                <SolidColorBrush x:Key="DataGridColumnHeaderBackgroundColor" Color="Transparent" />
                            </controls:DataGrid.Resources>
                            <controls:DataGrid.Columns>
                                <controls:DataGridTextColumn Header="Inspection" />
                                <controls:DataGridTextColumn Header="Size" />
                                <controls:DataGridTextColumn Header="Progress" />
                                <controls:DataGridTextColumn Header="Actions" />
                            </controls:DataGrid.Columns>
                        </controls:DataGrid>
                    </Grid>
                </DataTemplate>
            </controls:DataGrid.RowDetailsTemplate>
        </controls:DataGrid>
    </Grid>
</Page>
